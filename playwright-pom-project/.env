# Environment Configuration for Playwright POM Project

# Base URL for the application under test
BASE_URL=https://dev.pippasync.customeradmin.boostonamazon.com

# Test Environment (dev, staging, production)
TEST_ENV=dev

# Browser Configuration
HEADLESS=true
BROWSER=chromium

# Test Data Configuration
TEST_USER_EMAIL=admin@admin.com
TEST_USER_PASSWORD=12345678
ADMIN_USER_EMAIL=admin@admin.com
ADMIN_USER_PASSWORD=12345678

# API Configuration (if needed for API testing)
API_BASE_URL=https://dev.pippasync.inventory.service.boostonamazon.com/api/v1
API_TIMEOUT=30000

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# Test Configuration
DEFAULT_TIMEOUT=30000
RETRY_COUNT=2
PARALLEL_WORKERS=4

# Reporting Configuration
REPORT_PATH=./test-results
SCREENSHOT_PATH=./test-results/screenshots
VIDEO_PATH=./test-results/videos

# Feature Flags (for conditional testing)
ENABLE_SOCIAL_LOGIN=true
ENABLE_NEWSLETTER=true
ENABLE_MOBILE_TESTING=true

# External Service URLs (for integration testing)
EXTERNAL_API_URL=https://api.external-service.com
EXTERNAL_API_KEY=your-api-key-here

# Notification Configuration (for test result notifications)
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=false

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false